        var g = SetQueryStDefaultVal("_g", 0);
        g = g == -1 ? 0 : g;

        var prize = SetQueryStDefaultVal("_p", 0);
        prize = prize == -1 ? -1 : prize;

        var pi = SetQueryStDefaultVal("_pi", 1);
        var ps = SetQueryStDefaultVal("_ps", 25);
        $("#ddlpagesize").val(ps);

        SetExportQuizGrid(pi, ps);

        function SetExportQuizGrid(pageindex, pagesize) {
            var status = $("#Status").val();
            var row = '';
            var pdfrow = '';
            var reccount = 0;
            gl.ajaxreqloader(websiteurlapi + "/AdminGetSweepstakesresult", "get", { bid: bid, pgindex: pageindex, pgsize: -1, str: str, gid: g }, function (response) {
                if (response.length > 0) {
                    reccount = response[0].TotalRecords;
