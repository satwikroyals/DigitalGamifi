                        pdfrow += "<tr><td>" + item.GameName + "</td><td>" + item.CustomerName + "</td><td>" + item.Mobile + "</td><td>" + item.Email + "</td><td>" + item.Genderstring + "</td><td>" + item.Agestring + "</td><td>" + item.City + "</td><td>" + item.StateId + "</td><td>" + item.Zipcode + "</td><td>" + item.Address + "</td><td>" + item.AddressLine2 + "</td><td>" + item.ReferredBy + "</td></tr>";
                    });
                    $("#tbldatapdf").html(pdfrow);
                }

            }, '', '', '', '', false, false);
        }
    }
</script>

