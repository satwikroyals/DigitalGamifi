<!DOCTYPE html>
@using DIGITAL_GAMIFY.Entities;
@using DIGITAL_GAMIFY.Code;
<html>
<head>
    <meta charset="utf-8" />
    <title>@Globalsettings.GetProjectName()</title>
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content(Globalsettings.adminthemeimagepath("favicon.ico"))">
    <!-- CSS -->
    <link href="@Url.Content(Globalsettings.admincsspath("theme.min.css"))" rel="stylesheet" type="text/css">
    <!--[if IE 7]><link type="text/css" rel="stylesheet" href="css/font-awesome-ie7.min.css"><![endif]-->
    <!--[if IE]> <link href="css/ie.css" rel="stylesheet" > <![endif]-->
    <!--Js-->
    <script type="text/javascript" src="@Url.Content(Globalsettings.adminjspath("jquery.min.js"))"></script>
    <script type="text/javascript" src="@Url.Content(Globalsettings.adminjspath("bootstrap.min.js"))"></script>
    <script type="text/javascript" src="@Url.Content(Globalsettings.adminjspath("global.js"))"></script>
    <script>
        //global javascript variable to get websiteurl,websiteurlapi .
        var websiteurl = '@Globalsettings.GetWebSiteUrl()';
        var websiteurlapi = '@Globalsettings.GetWebSiteUrlApi()';
        var errmsgprefix = '@Globalsettings.GetErrorMessagePrefix()';
        var aid = '@Globalsettings.ReadCookie(Globalsettings.AdminCookiename, Globalsettings.CookieAdminId)';        
    </script>
</head>
<body id="dashboard" class="full-layout  nav-right-hide nav-right-start-hide  nav-top-fixed responsive clearfix" data-active="dashboard " data-smooth-scrolling="1">
    @{
        //Stop browser go back after logout.
        Response.Cache.SetNoStore();
        Globalsettings _global = new Globalsettings();
    }
    <div class="vd_body">
        <!-- Header Start -->
        <header class="header-1" id="header">
            <div class="vd_top-menu-wrapper">
                <div class="container ">
                    <div class="vd_top-nav vd_nav-width  ">
                        <div class="vd_panel-header">
                            <div class="logo">
                                <a href="@Url.Action("index","dashboard")">
                                    <img alt="@Globalsettings.GetProjectName()" title="@Globalsettings.GetProjectName()" class="img-responsive" src="@Url.Content(Globalsettings.adminthemeimagepath("logo.png"))" width="80">
                                </a>
                            </div>
                            <!-- logo -->
                            <div class="vd_panel-menu  hidden-sm hidden-xs" data-intro="" data-step="1">
                                <span class="nav-medium-button menu" data-toggle="tooltip" data-placement="bottom" data-original-title="" data-action="nav-left-medium">
                                    <i class="fa fa-bars"></i>
                                </span>
                                @*<span class="nav-small-button menu" data-toggle="tooltip" data-placement="bottom" data-original-title="" data-action="nav-left-small">
                                        <i class="fa fa-ellipsis-v"></i>
                                    </span>*@
                            </div>
                            <div class="vd_panel-menu left-pos visible-sm visible-xs">
                                <span class="menu" data-action="toggle-navbar-left">
                                    <i class="fa fa-ellipsis-v"></i>
                                </span>
                            </div>
                            <div class="vd_panel-menu visible-sm visible-xs">
                                <span class="menu visible-xs" data-action="submenu">
                                    <i class="fa fa-bars"></i>
                                </span>
                                <span class="menu visible-sm visible-xs" data-action="toggle-navbar-right">
                                    <i class="fa fa-comments"></i>
                                </span>
                            </div>
                            <!-- vd_panel-menu -->
                        </div>
                        <!-- vd_panel-header -->
                    </div>
                    <div class="vd_container">
                        <div class="row">
                            <div class="col-sm-5 col-xs-12">
                            </div>
                            <div class="col-sm-7 col-xs-12">
                                <div class="vd_mega-menu-wrapper">
                                    <div class="vd_mega-menu pull-right">
                                        <ul class="mega-ul">
                                            <li id="top-menu-profile" class="profile mega-li">
                                                <a href="#" class="mega-link" data-action="click-trigger-close" id="menutr">
                                                    <span class="mega-name">
                                                        @if (_global.IsAdminLoggedin())
                                                        {

                                                            @Request.Cookies[Globalsettings.AdminCookiename][Globalsettings.CookieAdminun]
                                                            <i class="fa fa-caret-down fa-fw"></i>
                                                        }
                                                    </span>
                                                </a>
                                                <div class="vd_mega-menu-content  width-xs-2  left-xs left-sm" data-action="click-target-close" id="divmenutr">
                                                    <div class="child-menu">
                                                        <div class="content-list content-menu">
                                                            <ul class="list-wrapper pd-lr-10">
                                                                <li>
                                                                    <a href="#">
                                                                        <div class="menu-icon"><i class=" fa fa-user"></i></div>
                                                                        <div class="menu-text">Edit Profile</div>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="@Url.Action("Logout", "Account")">
                                                                        <div class="menu-icon"><i class=" fa fa-sign-out"></i></div>
                                                                        <div class="menu-text">Logout</div>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>

                                        </ul>
                                        <!-- Head menu search form ends -->
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- container -->
            </div>
            <!-- vd_primary-menu-wrapper -->
        </header>
        <!-- Header Ends -->
        <div class="content">
            <div class="container">
                <div class="vd_navbar vd_nav-width vd_navbar-tabs-menu vd_navbar-left  ">
                    <div class="navbar-menu clearfix">
                        <div class="vd_panel-menu hidden-xs">
                            <span data-original-title="" data-toggle="tooltip" data-placement="bottom" data-action="expand-all" class="menu" data-intro="" data-step="4">
                                <i class="fa fa-sort-amount-asc"></i>
                            </span>
                        </div>
                        <h3 class="menu-title hide-nav-medium hide-nav-small"></h3>
                        <div class="vd_menu">
                            <ul>
                                <li class="limenudashboard">
                                    <a href="@Url.Action("index","dashboard")" class="menunav">
                                        <span class="menu-icon"><i class="fa fa-dashboard"></i></span>
                                        <span class="menu-text">Dashboard</span>
                                    </a>
                                </li>
                                <li class="limenurestaurants">
                                    <a href="#" data-action="click-trigger" class="menunav">
                                        <span class="menu-icon"><i class="fa fa-building-o"></i></span>
                                        <span class="menu-text">Business</span>
                                        <span class="menu-badge"><span class="badge vd_bg-black-30"><i class="fa fa-angle-down"></i></span></span>
                                    </a>
                                    <div class="child-menu divmenunav " data-action="click-target" id="limenurestaurants">
                                        <ul>
                                            <li class="">
                                                <a href="@Url.Action("View", "Restaurants")" id="lnkrestaurantsview">
                                                    <span class="menu-text">View Business</span>
                                                </a>
                                            </li>
                                            <li class="">
                                                <a href="@Url.Action("Add", "Restaurants")" id="lnkrestaurantsadd">
                                                    <span class="menu-text">Add/Edit Business</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>

                                @*<li class="limenunotifications">
                                    <a href="#" data-action="click-trigger" class="menunav">
                                        <span class="menu-icon"><i class="fa fa-bell-o"></i></span>
                                        <span class="menu-text">Notifications</span>
                                        <span class="menu-badge"><span class="badge vd_bg-black-30"><i class="fa fa-angle-down"></i></span></span>
                                    </a>
                                    <div class="child-menu divmenunav " data-action="click-target" id="limenunotifications">
                                        <ul>
                                            <li class="">
                                                <a href="@Url.Action("View", "Notifications")" id="lnknotificationsview">
                                                    <span class="menu-text">View Notifications</span>
                                                </a>
                                            </li>
                                            <li class="">
                                                <a href="@Url.Action("Add", "Notifications")" id="lnknotificationsadd">
                                                    <span class="menu-text">Add/Edit Notifications</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>*@
                               


                                <li class="limenureports">
                                    <a href="#" data-action="click-trigger" class="menunav">
                                        <span class="menu-icon"><i class="fa fa-sitemap"></i></span>
                                        <span class="menu-text">Reports</span>
                                        <span class="menu-badge"><span class="badge vd_bg-black-30"><i class="fa fa-angle-down"></i></span></span>
                                    </a>
                                    <div class="child-menu divmenunav " data-action="click-target" id="limenureports">

                                    </div>
                                </li>

                            </ul>
                            <!-- Head menu search form ends -->
                        </div>
                    </div>
                    <div class="navbar-spacing clearfix">
                    </div>
                    <div class="vd_menu vd_navbar-bottom-widget">
                        <ul>
                            <li>
                                <a href="@Url.Action("Logout", "Account")">
                                    <span class="menu-icon"><i class="fa fa-sign-out"></i></span>
                                    <span class="menu-text">Logout</span>
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
                <div>
                    @RenderBody()
                </div>
            </div>
            <!-- .container -->
        </div>
        <!-- Footer Start -->
        <footer class="footer-1" id="footer">
            <div class="vd_bottom ">
                <div class="container">
                    <div class="row">
                        <div class=" col-xs-12">
                            <div class="copyright">
                                Copyright &copy;2020 @Globalsettings.GetCompanyName(). All Rights Reserved
                            </div>
                        </div>
                    </div>
                    <!-- row -->
                </div>
                <!-- container -->
            </div>
        </footer>
        <!-- Footer END -->
    </div>
    <!-- .vd_body END  -->
    <a id="back-top" href="#" data-action="backtop" class="vd_back-top visible"><i class="fa  fa-angle-up"></i></a>


</body>

</html>
